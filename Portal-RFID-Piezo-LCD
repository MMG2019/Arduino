#include <SPI.h>
#include <MFRC522.h>
#include <LiquidCrystal.h>
#include <Servo.h>
#include "pitches.h"
Servo myServo;
MFRC522 mfrc522(53, 6);
LiquidCrystal lcd(7, 8, 9, 10, 11, 12);
int tempPin = 0;

void mensajeInicial(){
lcd.clear();
  lcd.print("Bienvenido");
  
}

void mensajeInicial(float Temp){
lcd.clear();
  lcd.print("Bienvenido ");
  lcd.print(Temp);
  
}


void abrirPuerta(){
  myServo.write(180);
  delay(3000);
  myServo.write(0);

}

void tonoDenegar(){

   tone(4, 660);
  delay(200);
  noTone(4);
}
void tonoAbrir(){

  tone(4, 660);
  delay(200);
  tone(4, 550);
  delay(200);
  tone(4, 440);
  delay(200);
  noTone(4);
}
void mensaje(bool VoF){
//Entra un true o false y eso condiciona el mensaje del LCD
 if (VoF==true){
  
  lcd.setCursor(0, 0);
  lcd.print("Acceso concedido");
  tonoAbrir();
  abrirPuerta();
 
  mensajeInicial();
 }else{
  lcd.setCursor(0, 0);
  lcd.print("Acceso denegado");
  tonoDenegar();
  delay(3000);
  mensajeInicial();
 }
 
  
}

float calcularTemperatura(){
int tempReading = analogRead(tempPin);
  // This is OK
float tempVolts = tempReading * 5.0 / 1024.0;
    float tempC = (tempVolts - 0.5) * 10.0;
    float tempF = tempC * 9.0 / 5.0 + 32.0;
 delay(1000);
  Serial.println(tempC/2);
  return tempC/2;
 
  
}
void setup()
{
  myServo.attach(5);
  myServo.write(0);
Serial.begin(9600);
lcd.begin(16, 2);
SPI.begin();
mfrc522.PCD_Init();


}


void loop()
{

  float temperatura=calcularTemperatura();

mensajeInicial(temperatura);           
  
//here we have to wait for the card, when it is near to the sensor
if ( ! mfrc522.PICC_IsNewCardPresent()){
return;
}
//we can read it's value
if ( ! mfrc522.PICC_ReadCardSerial()) {
return;
}

Serial.print("Tag:");
String content= "";
for (byte i = 0; i < mfrc522.uid.size; i++) {
Serial.print(mfrc522.uid.uidByte[i]< 0x10 ? " 0" : " ");
Serial.print(mfrc522.uid.uidByte[i], HEX);
content.concat(String(mfrc522.uid.uidByte[i]<0x10 ? " 0" : " "));
content.concat(String(mfrc522.uid.uidByte[i], HEX));
}
content.toUpperCase();
content = content.substring(1);
if(content == "A9 AC C4 98"){
  mensaje(true);
 

}else{
  mensaje(false);
  
}
Serial.println();
}
